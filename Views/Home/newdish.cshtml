@using ChefsDishes.Models
@using ChefsDishes.Controllers
@using Microsoft.EntityFrameworkCore
@model NewDish
<h5>Add a Dish!</h5>
<form asp-action="Process" method="post">
    <div class="form-group" >
        <span asp-validation-for="DishName"></span>
        <label asp-for="DishName"></label>
        <input class="form-control" asp-for="DishName">
    </div>
     <div class="form-group">
        <span asp-validation-for="CaloriesNum"></span>
        <label asp-for="CaloriesNum"></label>
        <input class="form-control" asp-for="CaloriesNum">
    </div>
     <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <select asp-for="Tasty">
            @{
                for(int i=1; i<=5; i++)
                {
                    <option value=@i>@i</option>
                }
            }
        </select>
        <div class="form-group">
        <select asp-for="Names">
            @{
                foreach(var x in ViewBag.Chefs)
                {
                    <option value=@x.Name>@x.Name</option>
                }
            }
        </select>
        <div>
        <button class="btn btn-primary">Add a Dish!</button> 
        </div>
    </div>
</form>